# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Application Configuration
NEXT_PUBLIC_APP_NAME="IntelliFin"
NEXT_PUBLIC_APP_DESCRIPTION="Financial Management Platform for Zambian SMEs"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# Environment
NEXT_PUBLIC_ENVIRONMENT="development"

# Feature Flags
NEXT_PUBLIC_FEATURE_AIRTEL_INTEGRATION="true"
NEXT_PUBLIC_FEATURE_ZRA_INTEGRATION="true"
NEXT_PUBLIC_FEATURE_DARK_MODE="true"
NEXT_PUBLIC_FEATURE_MULTI_LANGUAGE="false"

# External Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_HOTJAR_ID=""
NEXT_PUBLIC_SENTRY_DSN=""

# Map Configuration (for future location features)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=""

# Social Media Links
NEXT_PUBLIC_COMPANY_WEBSITE="https://poshytrends.com"
NEXT_PUBLIC_SUPPORT_EMAIL="support@intellifin.com"
NEXT_PUBLIC_SUPPORT_PHONE="+260-XXX-XXXXXX"

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE="10485760" # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"

# Currency Configuration
NEXT_PUBLIC_DEFAULT_CURRENCY="ZMW"
NEXT_PUBLIC_CURRENCY_SYMBOL="K"

# Date/Time Configuration
NEXT_PUBLIC_DEFAULT_TIMEZONE="Africa/Lusaka"
NEXT_PUBLIC_DATE_FORMAT="DD/MM/YYYY"
NEXT_PUBLIC_TIME_FORMAT="HH:mm"

# Pagination Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE="20"
NEXT_PUBLIC_MAX_PAGE_SIZE="100"

# Session Configuration
NEXT_PUBLIC_SESSION_TIMEOUT="3600000" # 1 hour in milliseconds

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE="true"
NEXT_PUBLIC_SHOW_DEV_TOOLS="true"

# Performance Configuration
NEXT_PUBLIC_ENABLE_SW="false" # Service Worker
NEXT_PUBLIC_ENABLE_PWA="false" # Progressive Web App

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,ny,bem" # English, Chichewa, Bemba
